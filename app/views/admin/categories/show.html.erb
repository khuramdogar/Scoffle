<div class="container bounceInRight">
  <div class="card">
    <div class="card-header">
      <strong class="card-title">
        <%= @category.name %>
        <%= link_to 'Edit', edit_admin_category_path(@category) %>
      </strong>
      <strong class="card-actions">
        <%= link_to 'new menu item', new_admin_category_item_path(@category) %>
      </strong>
    </div>
    <div class="card-body">
      <table class="table table-striped table-bordered">
        <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th colspan="3"></th>
        </tr>
        </thead>

        <tbody>
        <% @category.items.each do |item| %>
          <tr>
            <td><%= item.name %></td>
            <td><%= item.description %></td>
            <td><%= link_to '', admin_category_item_path(@category,item), class: 'btn btn-info btn-sm fa fa-eye' %></td>
            <td><%= link_to '', edit_admin_category_item_path(@category,item), class: 'btn btn-warning btn-sm fa fa-pencil' %></td>
            <td><%= link_to '', admin_category_item_path(@category,item), class:'btn btn-danger btn-sm fa fa-trash', method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
      <%= link_to 'Back', admin_categories_path %>
    </div>
  </div>
</div>
<br>