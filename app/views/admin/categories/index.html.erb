<p id="notice"><%= notice %></p>

<div class="container bounceInRight">
  <div class="card">
    <div class="card-header">
      <strong class="card-title">Menu Items</strong>
      <strong class="card-actions">
        <%= link_to 'New Category', new_admin_category_path %>
      </strong>
    </div>
    <div class="card-body">
      <table class="table table-striped table-bordered">
        <thead>
        <tr>
          <th>Name</th>
          <th colspan="3"></th>
        </tr>
        </thead>

        <tbody>

        <% @categories.each do |category| %>
          <tr>
            <td><%= category.name %></td>
            <td><%= link_to '', admin_category_path(category), class: 'btn btn-info btn-sm fa fa-eye' %></td>
            <td><%= link_to '', edit_admin_category_path(category), class: 'btn btn-warning btn-sm fa fa-pencil' %></td>
            <td><%= link_to '', admin_category_path(category), class: 'btn btn-danger btn-sm fa fa-trash' ,method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<br>
