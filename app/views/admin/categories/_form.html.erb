<div class="card-body card-block">
  <%= form_with(model: [:admin, category], local: true) do |form| %>
    <% if category.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(category.errors.count, "error") %> prohibited this menu category from being saved:</h2>

        <ul>
          <% category.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="row">
      <div class="col-md-12">
        <div class="field">
          <%= form.label :name %>
          <%= form.text_field :name, class: "form-control" %>
        </div>
      </div>

      <div class="col-md-12">
          <%= form.fields_for :document do |f| %>
            <div class="field">
              <%= f.label :documents %>
              <%= f.file_field :doc, class: "form-control" %>
            </div>
          <% end  %>
      </div>
    </div>

    <div class="card-footer card-actions">
      <%= form.submit class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
